<div class="bakhshkala">

    @foreach (var item in Model)
    {
        <div class="kala">
            <div class="axkala"> <img src="@Url.Content(item.ImageURL)"></div>
            <div class="namekala"><a href="./kala/details/@item.ID">@item.Name</a></div>
            <div class="deskala"> <p>@item.Description</p></div>
            <div class="gheymat1">@item.Original_Price</div>
            <div class="gheymat2"> <a>@item.Discount_Price</a></div>

            @Html.ActionLink("ویرایش", "Edit", new { id = item.ID })
            @Html.ActionLink("جزئیات", "Details", new { id = item.ID })
            @Html.ActionLink("حذف", "Delete", new { id = item.ID })


        </div>
    }
</div>

<div>
    <nav style="width:fit-content; margin:0 auto">
        <ul class="pagination">
            @ViewBag.pagecount;

            @for (int i = 1; i <= @ViewBag.pagecount; i++)
            {

                <li class="page-item @((ViewBag.PageID==i)?"active":"" )" aria-current="page">
                    <a class="page-link" href="/kala/index/@i">@i</a>
                </li>
            }



        </ul>
    </nav>
</div>

